<h2>ユーザー</h2>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>introduction:<%= @user.introduction %></p>
</div>
  <% if @user == current_user %>
  <% unless @user.guest_user? %>
　  <%= link_to "プロフィール編集", edit_user_path %>
  <% end %>
  <% end %>
  
<div>
  <%= link_to "動物一覧", user_animals_path(@user.id) %>
</div>

<h4>投稿一覧</h4>
<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image(200,200) %>
  <% end %>
    <p><%= post.caption %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
    
</div>
<% end %>