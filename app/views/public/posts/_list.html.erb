<div class="container">
  <div class="row">
    <% posts.each do |post| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-4 shadow-lg">
          <%= link_to post_path(post) do %>
            <%= image_tag post.get_image(400,200), size: "400x200", class: "card-img-top object-fit-cover" %>
          <% end %>
          <div class="ml-2 mt-2">
            <p class="text-truncate"><i class="fa-solid fa-camera"></i> <%= post.caption %></p>
            <p class="text-truncate">
              <%= link_to user_path(post.user) do %>
                <i class="fa-solid fa-user" style="color: #0444b4;"></i> <span class="text-dark"><%= post.user.name %></span>
              <% end %>
            </p>
            <div class="js-fav-btn">
              <%= render partial: "public/favorites/button", locals: { post: post } %>
            </div>
            <p>
              <%= link_to post_path(post) do %>
                <i class="fa-regular fa-comment" style="color: #74C0FC;"></i> <span class="text-dark"><%= post.comments_count %> コメント</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate posts %>
</div>