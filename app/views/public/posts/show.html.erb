<div class="card-list-container py-5">
  <div class="row">
    <div class="col-12 col-sm-8 col-md-6 mx-auto">
      <div class="card mt-4 shadow-lg">
    <%= image_tag @post.get_image(400,400), size: "400x400", class: "card-img-top object-fit-cover" %>
    <div class="card-body">
      <div class="d-flex">
      <div>
        <%= link_to user_path(@post.user.id) do %>
          <div class="d-inline-block">
            <%= image_tag @post.user.get_profile_image(100,100), size: "100x100", class: 'object-fit-contain mt-3 rounded-circle' %>
              <p class="text-center"><%= @post.user.name %></p>
          </div>
        <% end %>
      </div>
      <div>
        <p><%= @post.caption %></p>
        <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
          
        <% if @post.user == current_user %>
          <%= link_to "編集", edit_post_path %>
          |
          <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        <% end %>
      </div>
      </div>
      
    <% if @post.favorited_by?(current_user) %>
      <p>
        <%= link_to post_favorite_path(@post), method: :delete do %>
        <i class="fa-solid fa-heart" style="color: red;"></i> <%= @post.favorites.count %> いいね
        <% end %>
      </p>
      <% else %>
      <p>
        <%= link_to post_favorite_path(@post), method: :post do %>
        <i class="fa-regular fa-heart" style="color: red;"></i> <%= @post.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>
      
    <div>
      <p>コメント件数：<%= @post.comments.count %></p>
      <% @post.comments.each do |comment| %>
        <p><%= image_tag comment.user.get_profile_image(50,50), class: "rounded-circle" %>
           <%= comment.user.name %>
        </p>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
        <% if comment.user == current_user %>
          <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
       </div>
      </div>
    </div>
  </div>
</div>
  
