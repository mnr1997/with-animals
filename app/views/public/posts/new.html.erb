<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">

<h1 class="text-dark bg-light p-4 mb-0">画像投稿フォーム</h1>
<div class="form-body p-4">
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>本文</h4>
  <%= f.text_area :caption %>

  <div>
    <%= f.label :animal_ids %>
    <div>
      <%= f.collection_check_boxes :animal_ids, @animals, :id, :name %>
    </div>
  </div>

  <%= f.submit '投稿' %>

<% end %>
</div>
</div>
    </div>
  </div>