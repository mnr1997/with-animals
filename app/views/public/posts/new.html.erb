<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto max-w-480 shadow-lg rounded">
      <div class="h5 text-dark bg-light p-4 mb-0">新規投稿</div>
      <div class="form-body p-4">
        <% if @post.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <div class="h6 alert-heading">
              <%= @post.errors.count %>件のエラーが発生しました
            </div>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @post do |f| %>
          <div class="form-group">
          　<%= f.label :image %>
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
          <div class="form-group">
            <%= f.label :caption %>
            <%= f.text_area :caption, class: "form-control", rows: "3" %>
          </div>
          <div class="form-group">
            <%= f.collection_check_boxes :animal_ids, @animals, :id, :name do |b| %>
              <%= b.label do %>
                <%= b.check_box %>
                <%= b.text %>
              <% end %>
            <% end %>
          </div>

          <%= f.submit "投稿", class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
　　</div>
  </div>
</div>