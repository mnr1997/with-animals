<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto max-w-480 shadow-lg rounded">
      <div class="h5 text-dark bg-light p-4 mb-0">プロフィール編集</div>
      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <div class="h6 alert-heading">
              <%= @user.errors.count %>件のエラーが発生しました
            </div>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image %>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
          <%= f.submit "保存", class: "btn btn-block btn-outline-secondary mb-3" %>
        <% end %>
        <%= link_to user_path do %>
          <i class="fa-solid fa-arrow-left-long">戻る</i>
        <% end %>
      </div>
　　</div>
  </div>
</div>