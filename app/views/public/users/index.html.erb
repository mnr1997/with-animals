<div class="container">
  <div class="d-md-flex">
    <div class="h3 mr-5">ユーザー一覧</div>
    <%= form_with url: users_path, method: :get do |f| %>
      <%= f.text_field :name, value: params[:name] %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class="mb-3">
    <%= link_to posts_path do %>
      <i class="fa-solid fa-arrow-left-long">戻る</i>
    <% end %>
  </div>
  <%= render "user", users: @users %>
</div>