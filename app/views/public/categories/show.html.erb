<div class="container">
  <h3 class="mt-5"><%= @category.name %>の投稿一覧</h3>
  <%= link_to categories_path do %>
    <i class="fa-solid fa-arrow-left-long">戻る</i>
  <% end %>

<% if @posts.present? %>
  <%= render 'public/posts/list', posts: @posts %>
<% else %>
  <%= flash.now[:notice] %>
<% end %>


</div>