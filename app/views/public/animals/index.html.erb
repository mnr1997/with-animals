<h1><%= @user.name %>の動物</h1>

<% if @user == current_user %>
  <%= link_to "登録", new_animal_path %>  
<% end %>

<div>
  <% @animals.each do |animal| %>
  <div>
    <%= link_to animal_path(animal) do %>
      <%= image_tag animal.get_animal_image(100,100), class: "mt-3 rounded-circle"; %>
      <%= animal.name %>
    <% end %>
  </div>
  <% end %>
</div>

<%= link_to "戻る", user_path(@user) %>