<div class="container">
  <div class="h3"><%= @user.name %>の動物</div>
  <div class="mt-3">
    <%= link_to user_path(@user) do %>
      <i class="fa-solid fa-arrow-left-long">戻る</i>
    <% end %>
    
    <% if @user == current_user %>
      <%= link_to "登録", new_animal_path, class: "btn btn-success ml-3" %>  
    <% end %>
  </div>
  <div class="row">
  <div class="col-md-5 col-sm-10 mt-3">
    <table class="table">
      <tbody>
      <% @animals.each do |animal| %>
        <tr>
          <td>
            <%= link_to animal_path(animal) do %>
            <%= image_tag animal.get_animal_image(100,100), size: "100x100", class: "object-fit-cover rounded-circle" %>
            <% end %>
          </td>
          <td class="align-middle">
            <%= link_to animal_path(animal) do %>
            <span class="text-dark"><%= animal.name %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @animals %>
    </div>
  </div>
</div>