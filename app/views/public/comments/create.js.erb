var comments = document.querySelector(".js-comments");
if (comments) {
  comments.innerHTML = "<%= j(render partial: "public/comments/comment", locals: { post: @post }) %>";
}

var commentForm = document.querySelector("#comment_comment");
if (commentForm) {
  commentForm.value = "";
}

var commentsCount = document.querySelector(".js-comments-count");
if (commentsCount) {
  commentsCount.innerHTML = "<%= @post.comments_count %>";
}
