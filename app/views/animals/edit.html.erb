<h1>Animals#edit</h1>
<%= form_with model: @animal, url: user_animal_path do |f| %>
  
  <label for="inputImage">AnimalImage</label>
  <%= f.file_field :animal_image, placeholder: "動物画像", accept: "image/*" %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputSex">性別</label><br>
    <%= f.radio_button :sex, Animal.sexes.key(0) %>
    <%= f.label :sex_male, Animal.sexes_i18n[:male] %><br>
    <%= f.radio_button :sex, Animal.sexes.key(1) %>
    <%= f.label :sex_female, Animal.sexes_i18n[:female] %><br>
    <%= f.radio_button :sex, Animal.sexes.key(2) %>
    <%= f.label :sex_unknown, Animal.sexes_i18n[:unknown] %><br>
  <label for="inputAge">年齢</label>
  <%= f.text_field :age %>
  <label for="inputCharacter">性格</label>
  <%= f.text_field :character %>
  <div>
    カテゴリー
    <%= f.collection_radio_buttons :category_id, @categories, :id, :name %>
  </div>
  <%= f.submit "変更を保存" %>
<% end %>
