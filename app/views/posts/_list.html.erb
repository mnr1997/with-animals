<% posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(200,200) %>
    <% end %>
    <p><%= post.caption %></p>
    <p><%= link_to post.user.name, user_path(post.user.id) %></p>
    <% if post.favorited_by?(current_user) %>
      <p>
        <%= link_to post_favorite_path(post), method: :delete do %>
        <i class="fa-solid fa-heart" style="color: red;"></i> <%= post.favorites.count %> いいね
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to post_favorite_path(post), method: :post do %>
        <i class="fa-regular fa-heart" style="color: red;"></i> <%= post.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>
        
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  </div>
<% end %>