<h1>Posts#index</h1>

<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(200,200) %>
    <% end %>
    <p><%= post.caption %></p>
    <p><%= link_to post.user.name, user_path(post.user.id) %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  </div>
<% end %>