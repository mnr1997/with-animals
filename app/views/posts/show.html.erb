<h1>投稿詳細</h1>
  <div>
    <%= image_tag @post.get_image(200,200) %>
    <p><%= @post.caption %></p>
    <p><%= link_to @post.user.name, user_path(@post.user.id) %></p>
    <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
    
    <% if @post.user == current_user %>
      <%= link_to "Edit", edit_post_path %>
      |
      <%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% end %>
    
  </div>

