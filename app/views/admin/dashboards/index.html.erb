<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mt-3">
      <%= link_to admin_categories_path do %>
      <div class="text-dark">カテゴリー一覧</div>
      <% end %>
      <div class="h3">ユーザー一覧</div>
      <table class="table mt-3">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= link_to "削除", admin_user_path(user), method: :delete, class: "btn btn-outline-danger", data: { confirm: "本当に削除しますか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>